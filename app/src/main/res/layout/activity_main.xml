<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/f"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="361dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/islem"
            android:layout_width="wrap_content"
            android:layout_height="345dp"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:hint="0"
            android:textSize="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="AC"
            android:textColor="@color/black"
            android:background="@drawable/buton"
            android:onClick="sifir"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="+/-"
            android:onClick="artieksi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonYuzde"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="%"
            android:onClick="click"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonBol"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="/"
            android:onClick="click"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="7"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="8"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="9"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonCarp"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="X"
            android:onClick="click"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="4"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="5"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="6"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonEksi"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/buton"
            android:text="-"
            android:onClick="click"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="1"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="2"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="3"
            android:onClick="sayi"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonArti"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="+"
            android:onClick="click"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="98dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/buton"
            android:text="0"
            android:onClick="sayi"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="."
            android:onClick="virgul"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonEsit"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="="
            android:onClick="sonuc"
            android:background="@drawable/buton"
            android:textSize="24sp"/>

    </LinearLayout>

</LinearLayout>